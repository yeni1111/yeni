{
    "name": "selenium-mocha-digital-skola",
    "version": "1.0.0",
    "description": "selenium WebDriver tests using Mocha with Mochawesome reports",
    "scripts": {
        "test": "mocha test_sesi9.js --timeout 60000",
        "test-parallel": "mocha tests --parallel --recursive --timeout 60000",
        "test-pertama": "mocha tests --grep 'Pertama' --recursive --timeout 60000",
        "jalanin-mochawesome": "mocha test_sesi9.js --timeout 60000 --reporter mochawesome",
        "jalanin-simple-html": "mocha test_sesi9.js --recursive --timeout 60000 --reporter mocha-simple-html-reporter --reporter-options output=report.html",
        "mochawasemo": "mocha test_sesi9.js --timeout 60000 --reporter mochawesome && start mochawesome-report\\mochawesome.html",
        "TEST2": "mocha test_sesi9.js --timeout 60000"
    },
    "dependencies": {
        "selenium-webdriver": "^4.17.0"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.10",
        "@types/node": "^22.14.1",
        "mocha": "^10.8.2",
        "mocha-simple-html-reporter": "2.0.0",
        "mochawesome": "^7.1.3"
    }
}
